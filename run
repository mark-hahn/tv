#   -*-  grammar-ext: sh  -*-

kill $(pgrep -f "tv-server.js") > /dev/null 2>&1
killall tail > /dev/null 2>&1
set -e
cd ~/Dropbox/apps/tv
coffee -co server-js server
echo >> tv.log
tail -fn 0 tv.log &
export DEBUG=*
export DEBUG=tv:*
node server-js/tv-server.js
nohup node server-js/tv-server.js >> tv.log 2>&1 &
node server-js/tv-server.js &
