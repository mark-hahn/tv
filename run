#   -*-  grammar-ext: sh  -*-

kill $(pgrep -f "tv-server.js") > /dev/null 2>&1
killall tail > /dev/null 2>&1
set -e
coffee -co server-js server
rm -f tv-server.js
mv server-js/tv-server.js tv-server.js 
echo >> tv.log
tail -fn 0 tv.log &
export DEBUG=*
# export DEBUG=tv:*
# nohup node tv-server.js >> tv.log 2>&1 &
# node tv-server.js &
node tv-server.js
